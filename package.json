{
	"name": "client",
	"version": "1.0.0",
	"description": "React Parcel Boilerplate",
	"author": "Matt Lockyer",
	"license": "ISC",
	"dependencies": {
		"bn.js": "^5.2.0",
		"canvas-confetti": "^1.4.0",
		"copy-to-clipboard": "^3.3.1",
		"near-api-js": "^0.42.0",
		"near-seed-phrase": "^0.2.0",
		"parcel": "^v2.0.0-rc.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1"
	},
	"devDependencies": {
		"eslint": "^7.14.0",
		"rimraf": "^3.0.2"
	},
	"browserslist": [
		"last 2 Chrome versions"
	],
	"scripts": {
		"clean": "rimraf ./.parcel-cache",
		"swap": "mkdir -p dist && cp -a output/. dist/ && rimraf output && cd dist && find -not -newermt '-30 seconds' -delete",
		"patch": "rsync -a ./patches/ ./",
		"build": "yarn patch && yarn clean && parcel build src/index.html --no-source-maps --dist-dir output && yarn swap",
		"fix": "eslint src/ --fix",
		"start": "parcel src/index.html"
	}
}
